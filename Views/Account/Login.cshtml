@model QueroBar.Models.ViewModels.LoginViewModel

<div class="container-xxl bg-white p-0">
    <!-- Spinner Start -->
    <div id="spinner"
         class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->
</div>

<div class="page">
    <form method="post" asp-controller="Account" asp-action="Login" class="formLogin">
        <span asp-validation-for="Error" class="text-danger"></span>
        <img src="/images/QueroBarLogo.png" alt="">
        <p>Digite os seus dados de acesso nos campos abaixo.</p>

        <label asp-for="Email">Email</label>
            <input asp-for="Email" name="email" class="form-control" type="email" placeholder="Digite seu e-mail" autofocus>
        <span asp-validation-for="Email" class="text-danger"></span>

        <label asp-for="Password" class="control-label">Senha</label>
            <input asp-for="Password" name="Password" type="password" placeholder="Digite seu senha">
        <span asp-validation-for="Password" class="text-danger"></span>
        <a asp-controller="Account" asp-action="Register" class="nav-item nav-link">Criar Conta</a>

        <label>
            <input type="checkbox" asp-for="KeepLoggedIn" />
            Keep me logged In.
        </label>

        <button type="submit" class="btn">Acessar</button>
    </form>
</div>